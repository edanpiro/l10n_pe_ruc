<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_form_inherit_id" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <sheet position="before">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="enabled,disable" readonly="True"/>
                    </header>
                </sheet>
                <xpath expr="//field[@name='property_account_position']" position="after">
                    <field name="document_type"/>
                    <label for="vat"/>
                    <div name="vat_info">
                        <field name="vat"/>
                        <button colspan="2" name="button_check" string="Check Validity" type="object" icon="gtk-execute" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
